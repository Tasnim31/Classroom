<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_student"
    android:background="#00BFA5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BFA5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC400"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pic"
            android:background="@mipmap/ic_account_box_white_24dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up"
            style="@android:style/TextAppearance.Material.Small"
            android:layout_marginTop="10dp"
            android:background="#00BFA5"
            android:textColor="@android:color/black"
            android:text="Upload"
            android:textStyle="bold"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BFA5"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center"
        android:padding="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tname"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="User name goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tins"
            android:text="Institution"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/institution"
            android:text="Institution goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tCourse_no"
            android:text="Course No"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Course_no"
            android:text="Course no goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tCourse_title"
            android:text="Course title"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Course_title"
            android:text="Course title goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tphn"
            android:text="Phone"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phn"
            android:text="Phone goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            style="?android:textAppearanceSmall"
            android:layout_marginTop="10dp"
            android:background="#FFC400"
            android:textColor="@android:color/black"
            android:text="Update Information"
            android:padding="16dp"
            android:textStyle="bold"/>


    </LinearLayout>

</ScrollView>