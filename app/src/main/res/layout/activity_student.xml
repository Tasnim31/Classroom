<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00BFA5"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFC400"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/pic"
            android:background="@mipmap/ic_account_box_white_24dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up"
            style="?android:textAppearanceSmall"
            android:layout_marginTop="10dp"
            android:background="#00BFA5"
            android:textColor="@android:color/black"
            android:text="Upload"
            android:textStyle="bold"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BFA5"
        android:gravity="center"
        android:orientation="vertical"
        android:textAlignment="center"
        android:padding="50dp">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tname"
            android:text="Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="User name goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tins"
            android:text="Institution"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/institution"
            android:text="Institution goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tyear"
            android:text="Year"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:text="Year goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tterm"
            android:text="Term"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/term"
            android:text="Term goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/troll"
            android:text="Roll"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/roll"
            android:text="User roll goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tphone"
            android:text="Phone"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#FFC400"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:text="User phone number goes here"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            style="?android:textAppearanceSmall"
            android:layout_marginTop="10dp"
            android:background="#FFC400"
            android:textColor="@android:color/black"
            android:text="Update Information"
            android:padding="16dp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>