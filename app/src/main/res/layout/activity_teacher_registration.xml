<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_registration"
    android:background="#00BFA5"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00BFA5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:text="Teacher Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/tvtRegistration"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFC400"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFC400"/>

    <EditText
        android:id="@+id/TRname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Institution :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFC400"/>

    <EditText
        android:id="@+id/TRinstitution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Institution"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course No :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFC400"/>

    <EditText
        android:id="@+id/TRcourse_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course No."
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Course Title :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFC400"/>


    <EditText
        android:id="@+id/TRcourse_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course Title"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFC400"/>


    <EditText
        android:id="@+id/Tphn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFC400"/>


    <EditText
        android:id="@+id/TRemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password :"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFC400"/>


    <EditText
        android:id="@+id/TRpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:hint="Enter Password"
        android:imeActionId="@+id/login"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/TRsign_up_button"
        style="?android:textAppearanceSmall"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#FFC400"
        android:text="Register"
        android:textColor="@android:color/black"
        android:textStyle="bold" />


</LinearLayout>

<ProgressBar
    android:id="@+id/TRprogressBar"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_gravity="center|bottom"
    android:layout_marginBottom="20dp"
    android:visibility="gone" />

    </RelativeLayout>


</ScrollView>